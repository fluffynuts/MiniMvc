@model MiniMvc.FormModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Html

@{
    ViewBag.Title = "title";
}

<script src="~/js/a.js"></script>

<h2>Home / Index</h2>

<fieldset>
    <legend>Demonstration of area issues</legend>
    Here's an action link where the area is not in the path: @Html.ActionLink("Go to sub", "Index", "Cow", routeValues: new { area = "Sub" })
    <br/>
    Here's an url where the area is not in the path: @Url.Action("Index", "Cow", new { area = "Sub" })
</fieldset>

@Html.RenderScript(BundleConfig.AB)

@Html.ActionLink("Add a person", "Add", "Person", routeValues: new { controller = "Person" }, htmlAttributes: new { target = "_blank" })
<br/>

@functions {

    void PrintName(string name)
    {
        <div>@name</div>
    }

}

@using (Html.BeginForm(nameof(HomeController.Submit), "Home", FormMethod.Post))
{
    <div>
        @Html.LabelFor(o => o.Name)
        @Html.TextBoxFor(o => o.Name)
    </div>
    <div>
        @Html.LabelFor(o => o.Email)
        @Html.TextBoxFor(o => o.Email)
    </div>
    <button type="submit">Submit</button>
}